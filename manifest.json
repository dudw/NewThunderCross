{
    "description": "New generation Thunder invoker",
    "manifest_version": 2,
    "name": "ThunderCross",
    "version": "0.3.0",
    "applications": {
        "gecko": {
            "id": "Thunder@Cross",
            "strict_min_version": "52.0"
        }
    },
    "options_ui": {
        "page": "/html/options.html",
        "browser_style": true,
        "open_in_tab": true
    },
    "background": {
        "scripts": [
            "/background/storage.js",
            "/background/getFileName.js",
            "/background/BaiduyunDownload.js",
            "/background/StntsDownload.js",
            "/background/Downloadable.js",
            "/background/ActionRule.js",
            "/background/catch.js",
            "/background/contextmenu.js",
            "/background/main.js"
        ]
    },
    "web_accessible_resources": [
        "/html/blank.html",
        "/html/Readme.html",
        "/html/rules.html"
    ],
    "permissions": [
        "storage",
        "nativeMessaging",
        "tabs",
        "menus",        
        "downloads",
        "webRequest",
        "webRequestBlocking",
        "<all_urls>"
    ],
    "default_locale": "en"
}
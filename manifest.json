{
    "description": "New generation Thunder invoker",
    "manifest_version": 2,
    "name": "ThunderCross",
    "version": "0.1.2",
    "applications": {
        "gecko": {
            "id": "Thunder@Cross",
            "strict_min_version": "52.0"
        }
    },
    "options_ui": {
        "page": "options.html",
        "browser_style": true
    },
    "background": {
        "scripts": [
            "fileExt.js",
            "getFileName.js",
            "isDownloadable.js",
            "catch.js",
            "main.js"
        ]
    },
    "permissions": [
        "storage",
        "nativeMessaging",
        "webRequest",
        "webRequestBlocking",
        "<all_urls>"
    ]
}